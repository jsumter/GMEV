//control patterns for the haptic array
//this is still a rough draft

//these pinouts are for the raspberry pi 3b
GPIO.setup(0, GPIO.OUT)  //the front, right, top haptic
GPIO.setup(2, GPIO.OUT)   // the front, right, bottom haptic
GPIO.setup(3, GPIO.OUT)  //the front, left, top haptic
GPIO.setup(4, GPIO.OUT)  //the front, left, bottom haptic
GPIO.setup(5, GPIO.OUT)  //the back, right side haptic
GPIO.setup(6, GPIO.OUT)  // the back, left side haptic

//initialize all the outputs to be OFF
GPIO.output(0, 0)
GPIO.output(2, 0)
GPIO.output(3, 0)
GPIO.output(4, 0)
GPIO.output(5, 0)
GPIO.output(6, 0)

//distance presets
long = 10
med = 5
short = 1

//for the haptic motor speed control
if Sensor_Distance = infinity:  // not sure how to code this, but this condition is for if the LIDAR does not give a reading
  GPIO.output(2, 0)         # set GPIO to 0/GPIO.LOW/False  
  sleep(0.1)   
elif Sensor_Distance >= 1ong:
  GPIO.output(2, 1)         # set GPIO to 1/GPIO.HIGH/True  
  sleep(0.1)                 # wait
  GPIO.output(2, 0)         # set GPIO to 0/GPIO.LOW/False  
  sleep(0.1)   
elif Sensor_Distance >= med:
  GPIO.output(2, 1)         # set GPIO to 1/GPIO.HIGH/True  
  sleep(0.1)                 # wait
  GPIO.output(2, 0)         # set GPIO to 0/GPIO.LOW/False  
  sleep(0.1)   
else: //if the distance is not registered, long or med, then it must be short
  GPIO.output(2, 1)         # set GPIO to 1/GPIO.HIGH/True  
  sleep(0.1)                 # wait
  GPIO.output(2, 0)         # set GPIO to 0/GPIO.LOW/False  
  sleep(0.1)   
